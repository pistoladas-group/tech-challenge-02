@model TechNews.Web.Models.News;
@{
    ViewData["Title"] = $"TechNews - {@Model.Title}";
}

<!-- titulo -->
<div class="row pt-3">
    <div class="col pt-3 text-center">
        <h1 class="fw-bold">@Model.Title</h1>
    </div>
</div>

<!-- imagem -->
<div class="row">
    <div class="col pt-4 text-center">
        <img src="@Model.ImageSource" class="img-fluid rounded" alt="imagem notícia">
    </div>
</div>

<!-- autor -->
<div class="row my-3">
    <div class="col-2">
    </div>
    <div class="col-1">
        <img src="@Model.Author.ImageSource" class="img-thumbnail rounded-circle" alt="imagem autor">
    </div>
    <div class="col-2 mx-0 px-0 mt-2">
        <p class="pt-3">@Model.Author.Name</p>
    </div>
    <div class="col-2 mx-0 px-0 mt-2">
        <p class="text-muted pt-3">@Model.PublishDate.ToString("dd MMMM, yyyy", new System.Globalization.CultureInfo("pt_BR"))</p>
    </div>
    <div class="col-5 mx-0 px-0">
    </div>
</div>

<!-- notícia -->
<div class="row">
    <div class="col-2"></div>
    <div class="col-8">
        <p class="fs-5">
            @Model.Description
        </p>
    </div>
    <div class="col-2"></div>
</div>

<!--voltar-->
<div class="row pb-3">
    <div class="col-8"></div>
    <div class="col-3">
        <div class="btn btn-dark" onclick="window.location.href='/news'">Voltar</div>
    </div>
    <div class="col-1"></div>
</div>