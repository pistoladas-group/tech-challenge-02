@model TechNews.Web.Models.News

<div class="row mb-0 py-2 clickable" onclick="window.location.href='/news/detail/@Model.Id'">
    <div class="col-9">
        <div class="py-2">
            <div class="row mb-2">
                <div class="col-1 mx-0 px-0">
                    <img src="@Model.Author.ImageSource" class="img-thumbnail rounded-circle" alt="Author photo">
                </div>
                <div class="col-4 mx-0 mt-2">
                    <p class="">
                        <h5>@Model.Author.Name</h5> 
                    </p>
                </div>
                <div class="col-5 ml-0 pl-0 mt-2">
                    <p class="text-muted pt-3">@Model.PublishDate.ToString("dd MMMM, yyyy", new System.Globalization.CultureInfo("pt_BR"))</p>
                </div>
            </div>
            <h3 class="py-2">@Model.Title</h3>
            <p class="">@Model.Description</p>
        </div>
    </div>
    <div class="col-3">
        <div class="py-2">
            <img src="@Model.ImageSource" class="img-fluid rounded" alt="Post Photo">
        </div>
    </div>
    <div class="row mx-auto">
        <div class="col-10">
            <hr class="my-3" />
        </div>
    </div>
</div>